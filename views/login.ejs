<%- include("partials/header")  %> 


    <form action="/login" method="POST" class="form-signin">
      <div style="margin:15px 110px;">
      <h1 class="h3 mb-3 font-weight-normal ml-2">登入</h1>
      <i class="fas fa-user-circle fa-5x"></i>
      </div>
      
      <label for="inputEmail" class="sr-only mt-1">使用者名稱</label>
      <input type="text"" id="inputEmail"  name="username" class="form-control" placeholder="使用者名稱" required autofocus>
      <label for="inputPassword" class="sr-only">密碼</label>
      <input type="password" id="inputPassword" name="password" class="form-control " placeholder="密碼" required>
      <a href="/forgot" class="d-flex float-right">忘記密碼</a>
      <button class="btn btn-lg btn-primary btn-block"  type="submit">登入</button>
      
      <a href="/campgrounds" class="d-flex mt-2">返回</a>
    </form>
      

