<%- include("../partials/header")  %> 


<div class="container">
  <div class="row">
     <div class="text-center col-md-12 ">
       <h1>建立新的露營地</h1>
     </div>
    <div style="width: 30%; margin: 20px auto;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="露營地名稱">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" placeholder="價格">
        </div>

        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="圖片網址">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="描述">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="location" placeholder="地點">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-lg btn-primary btn-block">創建</button>
        </div>
      </form>
           <a href="/campgrounds">返回</a>

    </div>
  
  </div>

</div>
