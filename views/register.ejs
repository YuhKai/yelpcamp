<%- include("partials/header")  %> 


  <form action="/register" method="POST" class="form-signin">
      <div style="margin:15px 110px;">
      <h1 class="h3 mb-3 font-weight-normal ml-2">註冊</h1>
      <i class="fas fa-user-circle fa-5x"></i>
      </div>
   
      <label for="inputEmail" class="sr-only">使用者名稱</label>
      <input type="text"" id="inputEmail"  name="username" class="form-control" placeholder="使用者名稱" required autofocus>
      <label for="inputPassword" class="sr-only">密碼</label>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="密碼" required>
      <label for="inputEmail" class="sr-only">信箱</label>
      <input type="email" id="inputEmail" name="email" class="form-control" placeholder="信箱"" required>
      
      <button class="btn btn-lg btn-primary btn-block"  type="submit">註冊</button>
      
      <a href="/campgrounds" class="d-flex mt-2">返回</a>
    </form>
      


